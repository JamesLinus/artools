version=@version@

LIBDIR='@libdir@'
SYSCONFDIR='@sysconfdir@'

[[ -r ${LIBDIR}/util-msg.sh ]] && source ${LIBDIR}/util-msg.sh
import ${LIBDIR}/util.sh
import ${LIBDIR}/util-pkg-tree.sh

display_settings(){
    show_version
    show_config

    msg "ARGS:"
    msg2 "artix: %s" "${artix}"
    msg2 "arch: %s" "${arch}"
    msg2 "import_arch: %s" "${import_arch}"
    msg2 "clean: %s" "${clean}"

    msg "PATHS:"
    msg2 "tree_dir: %s" "${tree_dir}"
    msg2 "repo_tree: %s" "${repo_tree[*]}"
    msg2 "host_tree: %s" "${host_tree}"
    msg2 "host_tree_abs: %s" "${host_tree_arch}"
    msg2 "import_dir_repo: %s" "${import_dir_repo}"

    if ${import_arch};then
        read_import_list "system"
        msg2 "import_list: %s" "${import_list[@]}"
    fi
}

load_user_info

load_config "${AT_USERCONFDIR}/artools.conf" || load_config "${SYSCONFDIR}/artools.conf"

artix=false
pretend=false
arch=false
clean=false
import_arch=false

usage() {
    echo "Usage: ${0##*/} [options]"
    echo "    -s            Sync artix tree"
    echo "    -a            Sync arch tree"
    echo '    -i            Import arch system packages'
    echo '    -c            Clean package tree'
    echo '    -q            Query settings'
    echo '    -h            This help'
    echo ''
    echo ''
    exit $1
}

orig_argv=("$0" "$@")

opts='xaicqh'

while getopts "${opts}" arg; do
    case "${arg}" in
        x) artix=true ;;
        a) arch=true ;;
        i) import_arch=true ;;
        c) clean=true ;;
        q) pretend=true ;;
        h|?) usage 0 ;;
        *) echo "invalid argument '${arg}'"; usage 1 ;;
    esac
done

shift $(($OPTIND - 1))

check_root

prepare_dir "${tree_dir_arch}"

${pretend} && display_settings && exit 1

${clean} && clean_dir "${tree_dir}"

${artix} && sync_tree_artix

${arch} && sync_tree_arch

${import_arch} && import_from_arch
